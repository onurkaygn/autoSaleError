@model IEnumerable<OtoServisSatis.Entities.Rol>

@{
    ViewData["Title"] = "Roller";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
            <h1 class="h4 mb-0">Roller</h1>
            <a class="btn btn-sm btn-primary" asp-action="Create">+ Yeni Ekle</a>
        </div>

        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Adi)</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Adi)</td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-warning me-1" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                                </td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
