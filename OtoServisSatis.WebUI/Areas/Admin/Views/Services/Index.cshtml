@model IEnumerable<OtoServisSatis.Entities.Servis>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().ServiseGelisTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().AracSorunu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().ServisUcreti)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().ServistenCikisTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().YapilanIslemler)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().GarantiKapsamindaMi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().AracPlaka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Marka)
            </th>
            <th></th> <!-- Actions column -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiseGelisTarihi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AracSorunu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServisUcreti)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServistenCikisTarihi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YapilanIslemler)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GarantiKapsamindaMi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AracPlaka)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marka)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
